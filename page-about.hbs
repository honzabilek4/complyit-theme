{{!< default}}

{{#post}}

    <main class="site-main">
        <article class="{{post_class}} single">

            {{#match @page.show_title_and_feature_image}}
                <header class="post-header gh-canvas">
                    <h1 class="post-title">{{title}}</h1>
                    {{> "feature-image"}}
                </header>
            {{/match}}

            <div class="post-content gh-content gh-canvas">
                {{content}}
            </div>

        </article>
        <div class="gh-canvas" style="margin-top: 64px;">
            {{> custom-signup
                    heading="Chcesz być na bieżąco z publikacjami Comply IT?"
                    subheading="Zapisz się do newslettera i otrzymuj regularne aktualizacje o zmianach w prawie oraz praktyczne porady prawne bezpośrednio na swoją skrzynkę."
            }}
        </div>
    </main>

{{/post}}
